package com.a2.informational.kafka;

import java.util.List;

import org.springframework.kafka.core.KafkaTemplate;
import org.springframework.stereotype.Service;

import com.a2.informational.dtos.TopicDto;

import jakarta.validation.constraints.NotBlank;

@Service
public class InformationalProducer {
	
	private KafkaTemplate<String, String> kafkaTemplate;
	
	public InformationalProducer(KafkaTemplate<String, String> kafkaTemplate) {
		this.kafkaTemplate = kafkaTemplate;
	}
	
	public void forwardTopic(List<TopicDto> topics) {
		kafkaTemplate.send("topics", topics);
	}
}
